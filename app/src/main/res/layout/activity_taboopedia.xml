<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop1">

    <ImageView
        android:id="@+id/taboopedia_text_iv"
        android:layout_width="254dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/taboopedia_back_ibtn"
        android:contentDescription="@string/text_taboopedia"
        app:srcCompat="@drawable/text_taboopedia" />

    <ImageButton
        android:id="@+id/taboopedia_back_ibtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_top_arrow"
        android:contentDescription="@string/btn_top_arrow"
        android:rotation="-90" />

    <ImageView
        android:id="@+id/taboopedia_container_iv"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_below="@+id/taboopedia_text_iv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/treasure_container"
        app:srcCompat="@drawable/treasure_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/taboopedia_container_iv"
        android:layout_alignBottom="@+id/taboopedia_container_iv"
        android:layout_alignStart="@+id/taboopedia_container_iv"
        android:layout_alignEnd="@+id/taboopedia_container_iv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/taboopedia_contents_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/taboopedia_contents_1" />
    </LinearLayout>

</RelativeLayout>